<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:gravity="center"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/tv_intro_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        tools:text="@string/intro_one_h1" />
    <ImageView
        android:id="@+id/iv_intro"
        tools:src="@mipmap/intro_one"
        android:contentDescription="@string/intro_image"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_width="@dimen/intro_img_width_height"
        android:layout_height="@dimen/intro_img_width_height" />
    <TextView
        android:id="@+id/tv_intro_h2"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        tools:text="@string/intro_one_h1"
        android:layout_height="wrap_content"/>
</LinearLayout>