<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.OnboardActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/layout_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/app_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.adityasonel.inkpage_indicator.InkPageIndicator
            android:id="@+id/page_indicator"
            app:dotDiameter="8dp"
            app:dotGap="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_padding"
            app:currentPageIndicatorColor="@android:color/black"
            app:pageIndicatorColor="#808080" />
        <TextView
            android:id="@+id/tv_get_started"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_button"
            android:text="@string/get_started"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <TextView
            android:id="@+id/tv_skip"
            android:fontFamily="@font/poppins"
            android:text="@string/skip"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>